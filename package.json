{
  "name": "volunteer-contributions-fetch",
  "version": "0.0.0-development",
  "description": "Library to fetch volunteer contributions from several sources such as GitHub",
  "author": "Michael Kohler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelKohler/volunteer-contributions-fetch.git"
  },
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "debug": "^4.4.3",
    "jsdom": "^27.0.0",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-angular": "^20.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1-beta.1",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "prepare": "husky",
    "eslint": "eslint .",
    "example": "DEBUG=contributions:* node --env-file .env example/index.js",
    "prettier": "prettier --check .",
    "prettier:format": "prettier --write .",
    "semantic-release": "semantic-release",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "provenance": true
  },
  "nyc": {
    "check-coverage": true,
    "statements": 90,
    "branches": 90,
    "functions": 90,
    "lines": 90,
    "include": [
      "lib/**/*.js"
    ],
    "all": true,
    "reporter": [
      "text-summary",
      "lcov"
    ]
  },
  "ava": {
    "files": [
      "lib/**/*.test.js"
    ],
    "timeout": "10s"
  }
}
