{
  "name": "volunteer-contributions-fetch",
  "version": "0.0.0-development",
  "description": "Library to fetch volunteer contributions from several sources such as GitHub",
  "author": "Michael Kohler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MichaelKohler/volunteer-contributions-fetch.git"
  },
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "@octokit/rest": "^20.0.1",
    "axios": "^1.4.0",
    "debug": "^4.3.4",
    "jsdom": "^22.1.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-angular": "^17.7.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.2",
    "semantic-release": "^21.0.7",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "prepare": "husky install",
    "eslint": "eslint .",
    "example": "DEBUG=contributions:* node --env-file .env example/index.js",
    "prettier": "prettier --check .",
    "prettier:format": "prettier --write .",
    "semantic-release": "semantic-release",
    "test": "vitest"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "provenance": true
  },
  "nyc": {
    "check-coverage": true,
    "statements": 90,
    "branches": 90,
    "functions": 90,
    "lines": 90,
    "include": [
      "lib/**/*.js"
    ],
    "all": true,
    "reporter": [
      "text-summary",
      "lcov"
    ]
  },
  "ava": {
    "files": [
      "lib/**/*.test.js"
    ],
    "timeout": "10s"
  }
}
